<h6><strong><%= @neighborhood.name %></strong></h6>
<h4><a href="/<%= @neighborhood.city.name %>"><%= @neighborhood.city.name %></a></h4>
<div id="withborder">
  <% @neighborhood_list.each do |neighborhood| %>
    <p>
      <%= @neighborhood.description.html_safe %>
    </p>
</div>
<br>
<% end %>

<div id="ca-container" class="ca-container">

  <div class="ca-wrapper">
  <% @listing_list.each do |listing| %>
    <div class="ca-item ca-item-1">
     <div class="ca-item-main">
      <div class="hovereffects2">
        <a href="/<%= listing.city.name %>/<%= listing.neighborhood.name %>/<%= listing.id %>">
        <div id= "opacity3" class="thumbnail" align="center">

          <img src=<%= listing.image_url %> width="200px" height="200px">
           <div class="caption">
           <h4><%= listing.entry %></h4>
              <p align="left" ><%= listing.short_description %> <br>
              <br>
              <em><%= listing.street_address %></em></p>
           </div>
        </div>
        </a>
      </div>
     </div>
    </div>
  <%end%>
  </div>
</div>


